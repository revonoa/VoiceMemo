<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/guideRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="18dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="알림 권한이 필요합니다"
        android:textStyle="bold"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvGuideDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="리마인더 알림을 정확한 시간에 울리려면 아래 설정이 필요할 수 있어요."
        android:textSize="14sp"/>

    <Button
        android:id="@+id/btnRequestNoti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="알림 권한 요청" />

    <Button
        android:id="@+id/btnExactAlarmSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="정확한 알람 허용 설정으로 이동" />

    <Button
        android:id="@+id/btnDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="확인했어요 (뒤로가기)" />
</LinearLayout>
